<template>
  <div class="flex flex-col space-y-4">
    <!-- Header Controls -->
    <div class="flex justify-between items-center">
      <h3 class="text-xl font-bold text-white">Alerts Table</h3>
      <button
        @click="downloadCSV"
        class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded shadow"
      >
        â¬‡ Download CSV
      </button>
    </div>

    <!-- Table Container -->
    <div ref="tableContainer" class="w-full tabulator-container" />
  </div>
</template>

<script>
import { TabulatorFull as Tabulator } from "tabulator-tables";
import "tabulator-tables/dist/css/tabulator.min.css";

export default {
  name: "TabulatorTable",
  props: {
    data: Array,
    columns: Array,
  },
  data() {
    return {
      table: null,
    };
  },
  mounted() {
    this.initTable();
  },
  methods: {
    initTable() {
      this.table = new Tabulator(this.$refs.tableContainer, {
        data: this.data,
        columns: this.columns,
        layout: "fitColumns",
        pagination: "local",
        paginationSize: 8,
        paginationSizeSelector: [5, 8, 10, 20],
        placeholder: "No alerts available",
      });
    },
    downloadCSV() {
      if (this.table) {
        this.table.download("csv", "alerts.csv");
      }
    },
  },
  watch: {
    data(newData) {
      if (this.table) {
        this.table.replaceData(newData);
      }
    },
  },
};
</script>
